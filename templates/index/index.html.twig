{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h1>Users</h1><h2> Welcome Mr. {{ app.user.email   }}</h2> <div style="text-align: right"><a href="/user">Create Users</a></div>
    <div class="panel">
        <table>
            <thead>
             <th>First Name</th>
              <th>Last Name</th>
             <th> User Name</th>
             <th> Phone Number</th>
             <th> Created By</th>
             <th> Created At</th>
            </thead>

            <tbody>

                {% for user in users %}
                    <tr>

                    <td>{{ user.firstName|e }}</td>
                        <td>{{ user.lastName|e }}</td>
                        <td>{{ user.username|e }}</td>
                        <td>{{ phoneFormat(user.phoneNumber)|e }}</td>
                        <td>{{  find(user.id).email }}</td>
                        <td> {{  user.createdAt|date('d/m/Y') }}</td>
                        <td></td>
                    </tr>
                {% endfor %}

            </tbody>

        </table>

    </div>

{% endblock %}
